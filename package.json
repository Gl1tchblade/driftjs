  },
  "peerDependenciesMeta": {
    "better-sqlite3": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "@biomejs/biome": "^2.0.0"
  },
  "packageManager": "bun@1.2.17"
